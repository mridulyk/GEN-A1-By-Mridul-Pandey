  <!-- Preview Modal -->
  <div id="modalBackdrop" class="modal-backdrop" role="dialog" aria-modal="true" aria-labelledby="previewTitle">
    <div class="modal" role="document">
      <h2 id="previewTitle">Preview Submission</h2>
      <div class="grid" id="previewGrid">
        <!-- JS fills this -->
      </div>
      <div style="display:flex;gap:8px;justify-content:flex-end;margin-top:14px">
        <button id="closePreview" class="btn ghost">Close</button>
        <button id="confirmSubmit" class="btn alt">Confirm & Submit</button>
      </div>
    </div>
  </div>

  <script>
    // role tab switching
    const roles = document.querySelectorAll('.role-btn');
    const studentSection = document.getElementById('studentSection');
    const employeeSection = document.getElementById('employeeSection');
    const facultySection = document.getElementById('facultySection');
    let activeRole = 'student';

    function setRole(role){
      activeRole = role;
      roles.forEach(btn=>{
        btn.classList.toggle('active', btn.dataset.role === role);
        btn.setAttribute('aria-selected', btn.dataset.role === role ? 'true' : 'false');
      });
      studentSection.style.display = role === 'student' ? 'block' : 'none';
      employeeSection.style.display = role === 'employee' ? 'block' : 'none';
      facultySection.style.display = role === 'faculty' ? 'block' : 'none';
      studentSection.setAttribute('aria-hidden', role !== 'student');
      employeeSection.setAttribute('aria-hidden', role !== 'employee');
      facultySection.setAttribute('aria-hidden', role !== 'faculty');
    }
    roles.forEach(btn=>{
      btn.addEventListener('click', ()=> setRole(btn.dataset.role));
    });

    // validation helpers
    const form = document.getElementById('entryForm');
    const phoneInput = document.getElementById('phone');
    const formMessages = document.getElementById('formMessages');

    // ensure only digits in phone
    phoneInput.addEventListener('input', e=>{
      e.target.value = e.target.value.replace(/[^0-9]/g,'').slice(0,10);
    });

    function validateForm(){
      formMessages.innerHTML = '';
      const requiredFields = ['fullname','email','phone'];
      let valid = true;
      for(const id of requiredFields){
        const el = document.getElementById(id);
        if(!el.value.trim()){
          valid = false;
          const div = document.createElement('div');
          div.className='error'; div.innerText = `${el.previousElementSibling.innerText || id} is required.`;
          formMessages.appendChild(div);
        }
      }
      // email pattern
      const email = document.getElementById('email');
      if(email.value && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value)){
        valid = false;
        const div = document.createElement('div');
        div.className='error'; div.innerText = 'Enter a valid email address.';
        formMessages.appendChild(div);
      }
      // phone
      if(phoneInput.value && !/^\d{10}$/.test(phoneInput.value)){
        valid = false;
        const div = document.createElement('div');
        div.className='error'; div.innerText = 'Phone must be a 10 digit number.';
        formMessages.appendChild(div);
      }
      return valid;
    }

    // preview modal
    const previewBtn = document.getElementById('previewBtn');
    const modal = document.getElementById('modalBackdrop');
    const previewGrid = document.getElementById('previewGrid');
    const closePreview = document.getElementById('closePreview');
    const confirmSubmit = document.getElementById('confirmSubmit');

    function gatherData(){
      const fd = new FormData(form);
      const obj = {};
      for(const [k,v] of fd.entries()) obj[k]=v;
      obj.role = activeRole;
      return obj;
    }

    function openPreview(){
      previewGrid.innerHTML='';
      const data = gatherData();
      // choose which fields to show
      const rows = [
        ['Role', data.role],
        ['Full name', data.fullname || '—'],
        ['Email', data.email || '—'],
        ['Phone', data.phone || '—'],
        ['Gender', data.gender || '—'],
        ['Date of birth', data.dob || '—'],
        ['Address', data.address || '—']
      ];
      if(data.role === 'student'){
        rows.push(['Roll', data.roll || '—']);
        rows.push(['Course', data.course || '—']);
        rows.push(['Year', data.year || '—']);
        rows.push(['Guardian', data.guardian || '—']);
      } else if(data.role === 'employee'){
        rows.push(['Employee ID', data.empid || '—']);
        rows.push(['Department', data.dept || '—']);
        rows.push(['Designation', data.designation || '—']);
        rows.push(['Joining Date', data.joindate || '—']);
      } else if(data.role === 'faculty'){
        rows.push(['Faculty ID', data.facid || '—']);
        rows.push(['Specialization', data.specialization || '—']);
        rows.push(['Department', data.facultydept || '—']);
        rows.push(['Experience (yrs)', data.experience || '—']);
      }
      rows.forEach(([k,v])=>{
        const container = document.createElement('div');
        container.className = 'field';
        container.innerHTML = `<label style="font-weight:600;color:var(--muted)">${k}</label><div class="field-value">${v}</div>`;
        previewGrid.appendChild(container);
      });

      modal.style.display='flex';
      // trap focus
      closePreview.focus();
    }

    previewBtn.addEventListener('click', ()=>{
      formMessages.innerHTML='';
      const ok = validateForm();
      if(!ok) return;
      openPreview();
    });

    closePreview.addEventListener('click', ()=> modal.style.display='none');

    confirmSubmit.addEventListener('click', ()=> {
      // simulate successful submit
      modal.style.display='none';
      formMessages.innerHTML='';
      const s = document.createElement('div');
      s.className='success'; s.innerText='Form submitted successfully (demo).';
      formMessages.appendChild(s);
      form.reset();
      setRole('student'); // reset to student view
      window.scrollTo({top:0, behavior:'smooth'});
    });

    // form submit
    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      formMessages.innerHTML='';
      const ok = validateForm();
      if(!ok) return;
      openPreview();
    });

    // close modal on ESC
    document.addEventListener('keydown', (e)=>{
      if(e.key === 'Escape' && modal.style.display === 'flex') modal.style.display='none';
    });

    // accessible initial focus
    document.addEventListener('DOMContentLoaded', ()=> {
      document.getElementById('fullname').focus();
    });
  </script>
</body>
</html>